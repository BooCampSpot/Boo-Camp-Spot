<div class="row">
  <div class="col-12 col-sm-8 mx-auto">
    <div class="position-relative">
      <form id="signup-form" class="p-3 rounded">
        <div class="form-group">
          <label>Username</label>
          <div class="position-relative">
            <input id="signup-username" type="text" class="form-control">
            <div class="error-container justify-content-center align-items-center">
              <span class="text-monospace"></span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label>Email</label>
          <div class="position-relative">
            <input id="signup-email" type="text" class="form-control">
            <div class="error-container justify-content-center align-items-center">
              <span class="text-monospace"></span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label>Password</label>
          <div class="position-relative">
            <input id="signup-password" type="password" class="form-control">
            <div class="error-container justify-content-center align-items-center">
              <span class="text-monospace"></span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label>Password Confirm</label>
          <div class="position-relative">
            <input id="signup-password-confirm" type="password" class="form-control">
            <div class="error-container justify-content-center align-items-center">
              <span class="text-monospace"></span>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-info w-100 mt-2">Sign Up</button>
      </form>
      <div class="overlay-container justify-content-center align-items-center">
        <span class="text-monospace"></span>
      </div>
    </div>
  </div>
</div>