<div class="row">
  <div class="col-12 col-sm-8 mx-auto">
    <div class="position-relative">
      <form id="login-form" class="p-3 rounded">
        <div class="form-group">
          <label>Username or Email</label>
          <div class="position-relative">
            <input id="login-username-or-email" type="text" class="form-control">
            <div class="error-container justify-content-center align-items-center">
              <span class="text-monospace"></span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label>Password</label>
          <div class="position-relative">
            <input id="login-password" type="password" class="form-control">
            <div class="error-container justify-content-center align-items-center">
              <span class="text-monospace"></span>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-info w-100 mt-2">Log In</button>
      </form>
      <div class="overlay-container justify-content-center align-items-center">
        <span class="text-monospace"></span>
      </div>
    </div>
  </div>
</div>