<!-- Modal -->
<div class="modal fade" id="editDelReviewModal" tabindex="-1" role="dialog" aria-labelledby="editDelReviewLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editDelReviewLabel">Edit Review</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="position-relative">
          <form id="edit-review-form">
            <div class="form-group">
              <label>Title</label>
              <div class="position-relative">
                <input id="edit-review-title" type="text" class="form-control">
                <div class="error-container justify-content-center align-items-center">
                  <span class="text-monospace"></span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label>Body</label>
              <div class="position-relative">
                <textarea id="edit-review-body" class="form-control" rows="3"></textarea>
                <div class="error-container justify-content-center align-items-center">
                  <span class="text-monospace"></span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label>Rating</label>
              <select id="edit-review-rating" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
          </form>
          <div class="overlay-container justify-content-center align-items-center">
            <span class="text-monospace"></span>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button id="update-review-btn" type="button" class="btn btn-primary">Update</button>
        <button id="delete-review-btn" type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>